
<%= form_for price, remote: true, authenticity_token: true  do |f| %>
  <%= f.label :the_price %>:
  <%= f.hidden_field :coin_id, value: "1" %>
  <%= f.hidden_field :platform_id, value: "1" %>
  <%= f.submit "send", name: "send", class: "btn btn-primary", data: {send: "price"} %>
<% end %>

<script>
  console.log("calling setup Platform!");
  setupPlatform();
</script>
